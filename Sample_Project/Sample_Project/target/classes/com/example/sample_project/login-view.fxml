<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="mainPane" prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sample_project.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <VBox alignment="CENTER" onKeyPressed="#loginEnter" prefHeight="500.0" prefWidth="1000.0" spacing="25.0">
            <children>
                <HBox alignment="CENTER" prefHeight="25.0" spacing="25.0">
                    <children>
                        <Label prefHeight="25.0" prefWidth="75.0" text="Username" textFill="#00704a" />
                        <TextField fx:id="txtUsername" prefHeight="25.0" prefWidth="250.0" style="-fx-border-color: #00704A;" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="25.0" spacing="25.0">
                    <children>
                        <Label prefHeight="25.0" prefWidth="75.0" text="Password" textFill="#00704a" />
                        <PasswordField fx:id="txtPassword" prefHeight="25.0" prefWidth="250.0" style="-fx-border-color: #00704A;" />
                    </children>
                </HBox>
                <Button fx:id="btnLogin" mnemonicParsing="false" onMouseClicked="#login" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #00704A;" text="Login" textFill="WHITE">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Label fx:id="lblError" textFill="RED" />
            </children>
        </VBox>
    </children>
</Pane>
