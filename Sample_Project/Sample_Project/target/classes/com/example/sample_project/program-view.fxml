<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sample_project.ProgramController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="1000.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="25.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="25.0" prefWidth="50.0" text="Name" textAlignment="CENTER" />
                        <TextField fx:id="txtSearch" prefHeight="25.0" prefWidth="250.0" />
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Search" />
                    </children>
                    <padding>
                        <Insets left="25.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="450.0">
                    <children>
                        <TableView fx:id="listTable" editable="true" prefWidth="500.0" tableMenuButtonVisible="true" />
                        <VBox alignment="TOP_CENTER" prefWidth="500.0">
                            <padding>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0" spacing="25.0">
                                    <children>
                                        <Label alignment="CENTER" prefHeight="25.0" prefWidth="50.0" text="Name" textAlignment="CENTER" />
                                        <TextField fx:id="txtName" prefHeight="25.0" prefWidth="250.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0" spacing="25.0">
                                    <children>
                                        <Button fx:id="btnAdd" mnemonicParsing="false" onMouseClicked="#add" prefHeight="25.0" prefWidth="100.0" text="Add" />
                                        <Button fx:id="btnEdit" disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Edit" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</Pane>
