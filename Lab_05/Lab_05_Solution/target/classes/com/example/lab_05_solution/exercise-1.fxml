<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>

<Pane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab_05_solution.E1Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane fx:id="pane" prefHeight="450.0" prefWidth="500.0" style="-fx-background-color: #00704A;">
      <children>
          <Circle fx:id="circle" fill="WHITE" layoutX="250.0" layoutY="225.0" radius="50.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
      </children>
   </Pane>
    <HBox alignment="CENTER" layoutY="450.0" prefHeight="50.0" prefWidth="500.0" spacing="5.0" style="-fx-background-color: #ffffff;">
        <children>
            <Button fx:id="btnEnlarge" mnemonicParsing="false" onMouseClicked="#btnEnlargeClick" prefWidth="100.0" style="-fx-background-color: #00704A;" text="Enlarge" textFill="WHITE" />
            <Button fx:id="btnShrink" onMouseClicked="#btnShrinkClick" prefWidth="100.0" style="-fx-background-color: #00704A;" text="Shrink" textFill="WHITE" />
        </children>
    </HBox>
</Pane>
